        display: flex;
        flex-direction: row;
        margin: 10px;
        align-items: center;
}

.commen_text {
        margin: 0 0 15px 15px;
        padding-top: 10px;
        color: gray;
        font-size: 13px;
}

.item_cash {
        margin-left: 15px;
}

.item_num {
        position: absolute;
        right: 36px;
        color: gray;
}

.item_arrow {
        position: absolute;
        right: 10px;
        width: 20px;
        height: 20px;
}

.item_img {
        width: 30px;
        height: 30px;
}
